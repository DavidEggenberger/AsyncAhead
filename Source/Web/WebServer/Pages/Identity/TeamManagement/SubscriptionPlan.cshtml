@page
@model WebServer.Pages.Identity.TeamManagement.ManagePlanModel
@{
}

<h3>Your Current Plan: @Model.Team.Subscription.SubscriptionPlan.Name</h3>
<h3>Your Current Plan: @Model.Team.Subscription.SubscriptionPlan.Description</h3>

<h4>Change Plan</h4>

@foreach(var item in Model.SubscriptionPlans)
{
    <form asp-controller="Stripe" asp-action=@($"RedirectToStripe{item.Name}Subscription") method="post">
        <input name="quantity" type="number" />
        <button type="submit" id="checkout-button">Portal Session</button>
    </form>   
}



