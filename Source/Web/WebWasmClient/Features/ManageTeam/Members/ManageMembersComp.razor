<h5>Manage the Users</h5>

<table>
    <thead>
        <tr>
            <th>UserName</th>
            <th>Email</th>
            <th>Role</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Members)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>Do sth</td>
            </tr>
        }
    </tbody>
</table>

<button @onclick="() => Modal.Show<InviteMemberComp>()">Invite Users to Team</button>

@code{
    [Parameter] public List<MemberDTO> Members { get; set; }
}
