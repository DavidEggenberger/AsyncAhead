@page "/channels"
@attribute [AuthorizeTeamUser]

<div class="ChannelsContainer">
    <div class="ChannelHeader">
        <h2>Engage with your colleagues from @User.GetTeamName()</h2>
    </div>
    <div class="ChannelMain">
        @if(loading is false)
        {
            <input @bind="channelName" @bind:event="oninput"/>
            <button @onclick="() => CreateChannel(channelName)">Create a new Channel</button>

            if(channels.Count > 0)
            {
                foreach(var channel in channels)
                {
                    <ChannelComp Channel="channel"/>
                }
            }
        }      
    </div>
</div>
