@page "/ManageTeam"
@attribute [AuthorizeTeamAdmin]

<div class="ManageTeamPageContainer">
    <div class="ManageTeamGrid">
        @if(loading is false)
        {
            <CascadingValue Value="teamAdminInfo">
                 <div class="ManageMembersCompContainer">
                    <ManageMembersComp Members="teamAdminInfo.Members"/>
                </div>
                <div class="ManageSubscriptionCompContainer">
                    <ManageSubscriptionComp CurrentSubscription="teamAdminInfo.Subscription"/>
                </div>
                <div class="MetricsCompContainer">
                    <MetricsComp TeamMetrics="teamAdminInfo.Metrics"/>
                </div>
                <div class="AdminNotificationsCompContainer">
                    <AdminNotificationsComp AdminNotifications="teamAdminInfo.AdminNotifications"/>
                </div>
            </CascadingValue>      
        }       
    </div>
</div>
